{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"postCreateCommand": "bash .devcontainer/post_create.sh",
	"customizations": {
		"codespaces": {
			"openFiles": [
				".devcontainer/INSTRUCTIONS.adoc",
				".env.example",
				"test_environment.py"
				]
		},
		"vscode": {
			"settings": {
				"python.createEnvironment.trigger": "off"
			},
			"extensions": [
				"ms-python.python",
				"ms-python.debugpy"
				]
		}
	}
}
